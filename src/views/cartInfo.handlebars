<body>
   <h1>Tu Carrito de Compras</h1>
   {{#if cart.products.length}}
   <table>
      <thead>
         <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
         </tr>
      </thead>
      <tbody>
         {{#each cart.products}}
         <tr>
            <td>{{this.productId.title}}</td>
            <td>${{this.productId.price}}</td>
            <td>{{this.quantity}}</td>
         </tr>
         {{/each}}
      </tbody>
   </table>
   {{else}}
   <p>Tu carrito está vacío. ¡Agrega productos!</p>
   {{/if}}
   <button class="btn-detail" onclick="window.history.back()">Volver</button>
   <button id="clear-cart" class="btn-clear-cart">Vaciar Carrito</button>
   <button id="delete-cart" class="btn-delete-cart">Borrar Carrito</button>
</body>
<script src="/api/public/js/cartInfo.js"></script>